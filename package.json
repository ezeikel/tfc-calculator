{
  "name": "tfc-calculator",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules",
    "clean:deep": "rm -rf apps/*/node_modules packages/*/node_modules pnpm-lock.yaml && pnpm install"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native-renderer": "19.1.0",
    "@types/react": "^19.0.14"
  },
  "pnpm": {
    "overrides": {
      "react-native-css": "3.0.0",
      "metro-runtime": "0.83.1",
      "@expo/metro-runtime": "6.1.2",
      "lightningcss": "1.30.1"
    }
  }
}
